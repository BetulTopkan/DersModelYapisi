@model CartViewModel

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Miktar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cartProduct in Model.CartProducts)
        {
            <tr>
                <td>@cartProduct.Product.Id</td>
                <td>@cartProduct.Product.Name</td>
                <td>@cartProduct.Product.Price</td>
                <td>@cartProduct.Quantity</td>
                
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Toplam Tutar</th>
            <td>@Model.CartProducts.Sum(cp => cp.Price * cp.Quantity)</td>
        </tr>
        <tr>
            <th colspan="3">KDV</th>
            <td>@(Model.CartProducts.Sum(cp => (decimal)(cp.Price * cp.Quantity) * 0.18m))</td>
        </tr>
        <tr>
            <th colspan="3">KDV'li Toplam Tutar</th>
            <td>@(Model.CartProducts.Sum(cp => (decimal)(cp.Price * cp.Quantity)) * 1.18m)</td>
        </tr>
    </tfoot>
</table>